#include<stdio.h>
#include<math.h>
int main(){
    int num,rem=0;
    printf("enter binary number :");
    scanf("%d",num);
    int decNum=0, base=1;
    while(num !=0){
        rem=num%10;
        decNum += rem*base;
        base*= 2;
        num/= 10;
    }
    printf("Decimal = %d",decNum);
    

    return 0;
}
